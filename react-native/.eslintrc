{
  "extends": ["xo", "xo-react"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "react-native"
  ],
  "rules": {
    "react/jsx-uses-vars": 1,
    "react/react-in-jsx-scope": 1,
    "react/forbid-component-props": 0
  }
}
